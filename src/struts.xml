<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <package name="default" extends="struts-default">

        <interceptors>
            <interceptor name="authentication" class="interceptors.Authenticate" />

            <interceptor-stack name="authStack">
                <interceptor-ref name="authentication" />
                <interceptor-ref name="defaultStack" />
            </interceptor-stack>
        </interceptors>

        <default-action-ref name="login" />

        <global-results>
            <result name="LOGIN" type="redirect">login.action</result>
        </global-results>

        <action name="login" class="action.Login">
            <result name="SUCCESS">/submitIdea.jsp</result>
            <result name="RETRY">/index.jsp</result>
            <result name="RMIERROR">/index.jsp</result>
        </action>
        <action name = "Register" class = "action.Register">
            <result name = "SUCCESS">
                /index.jsp
            </result>
            <result name = "ERROR">
                /RMIerror.jsp
            </result>
            <result name = "INPUT_ERROR">
                /Register.jsp
            </result>
        </action>

        <action name="SubmitIdea" class = "action.SubmitIdea">
            <interceptor-ref name="authStack" />
            <result name = "SUCCESS">
                /submitIdea.jsp
            </result>
            <result name = "INPUT_ERROR">
                /submitIdea.jsp
            </result>
            <result name = "RMIERROR">
                /index.jsp
            </result>
        </action>
    </package>
</struts>